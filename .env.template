TRTL_CONSOLE_LOG=true

# Trtl: Database Configuration
TRTL_DATABASE_URL=leveldb:///fixtures/db
TRTL_DATABASE_REINDEX_ON_BOOT=false

# Trtl: Replica Configuration
TRTL_REPLICA_ENABLED=false
