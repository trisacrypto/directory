# Trtl: Backup Configuration
TRTL_BACKUP_ENABLED=false
TRTL_BACKUP_INTERVAL=1h
TRTL_BACKUP_STORAGE=fixtures/backups
TRTL_BACKUP_KEEP=1

# Trtl: Sentry Configuration
TRTL_SENTRY_DSN=
TRTL_SENTRY_ENVIRONMENT=
TRTL_SENTRY_TRACK_PERFORMANCE=false

